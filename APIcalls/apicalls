curl -X POST -H 'Content-Type: application/json' -d '{"name": "activity1", "description": "description1"}' http://localhost:8001
curl -X GET -H 'Content-Type: application/json' http://localhost:8001/1
curl -X PATCH -H 'Content-Type: application/json' -d '{"name": "activity modified", "description": "description modified"}' http://localhost:8001/1
curl -X DELETE -H 'Content-Type: application/json' http://localhost:8001/1